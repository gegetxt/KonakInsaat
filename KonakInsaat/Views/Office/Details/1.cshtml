@using KonakInsaat.Areas.Admin.Models
@model OfficeLocation
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    Layout = "_Layout";
    ViewData["Title"] = "1";
}


 <div class="content-wrapper">
        <!-- Lines -->
        <section class="content-lines-wrapper">
            <div class="content-lines-inner">
                <div class="content-lines"></div>
            </div>
        </section>
        <!-- Header Banner -->
        <section class="banner-header banner-img bg-img bg-fixed pb-0" data-background="upload/background.jpg" data-overlay-darkgray="0"> </section>
        <!-- Project Page -->
  <section class="project-page section-padding2">
            <div class="container">
                <!-- project slider -->
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="owl-carousel owl-theme">
                                                        <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178061.jpg" alt="Konak Construction"> </div>
                                                      <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178067.jpg" alt="Konak Construction"> </div>
                                                      <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178073.jpg" alt="Konak Construction"> </div>
                                                      <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178078.jpg" alt="Konak Construction"> </div>
                                                      <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178084.jpg" alt="Konak Construction"> </div>
                                                      <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178090.jpg" alt="Konak Construction"> </div>
                                                      <div class="portfolio-item"> <img class="img-fluid" src="../../upload/ofis/thump_1648178097.jpg" alt="Konak Construction"> </div>
                                                  </div>
            
                    </div>
                </div>
                <!-- project content -->
                <div class="row">
                    <div class="col-md-12 mt-30">

                        <h2 class="section-title2">@L["SALES_OFFICE_TITLE"]</h2>
                        <p class="mb-30">
                            <p>@Model.Ad</p>
</p>
               
                        <h2>@L["LOCATION_TITLE"]</h2>
                    <div class="row" style="margin-bottom: -70px;">
                    <div class="col-md-12 mb-30 animate-box" data-animate-effect="fadeInUp">
                        <iframe src="@(string.IsNullOrEmpty(Model.HaritaUrl) ? "https://www.google.com/maps?q=36.492249,32.0900059&output=embed" : Model.HaritaUrl)"
                                width="100%" height="500" style="border:0;" allowfullscreen loading="lazy"></iframe>
                    </div>
                </div>
                    </div>
                </div>
            </div>
        </section>
 <section class="testimonials">
            <div class="background bg-img bg-fixed section-padding pb-0" data-background="../upload/background.jpg" data-overlay-dark="5">
                <div class="container">
                    <div class="row">
                        <!-- Promo video -->
                        <div class="col-md-6">
                            <div class="vid-area">
                                <div class="vid-icon">
                                    <a class="play-button vid" href="https://www.youtube.com/watch?v=_3kH3iv6zow">
                                        <svg class="circle-fill">
                                            <circle cx="43" cy="43" r="39" stroke="#fff" stroke-width=".5"></circle>
                                        </svg>
                                        <svg class="circle-track">
                                            <circle cx="43" cy="43" r="39" stroke="none" stroke-width="1" fill="none"></circle>
                                        </svg> <span class="polygon">
                                            <i class="ti-control-play"></i>
                                        </span> </a>
                                </div>
                                <div class="cont mt-15 mb-30">
                                    <h5>KONAK CONSTRUCTION</h5>
                                </div>
                            </div>
                        </div>
                     <div class="col-md-5 offset-md-1">
                            <div class="testimonials-box animate-box" data-animate-effect="fadeInUp">
                                <div class="head-box">
                                    <h4>@L["SECTION_CALL_US_TITLE"]</h4>
                                    <p>@L["SECTION_CALL_US_TEXT"]</p>
                                </div>
                                <div class="">
                                    <div class="item"> <span class="quote"><img src="../../img/quot.png" alt=""></span>
                                      
                                        <form asp-controller="Base" asp-action="SubmitContactForm" method="post" class="contact__form">
                                        <!-- Form elements -->
                                        <div class="row">
                                            <div class="col-md-12 form-group">
                                                <input name="adi" type="text" maxlength="100" placeholder="@L["FORM_NAME_PLACEHOLDER"]" required> 
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <input name="mail" type="email" maxlength="100" placeholder="@L["FORM_EMAIL_PLACEHOLDER"]" required> 
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <input name="tel" type="text" maxlength="100" placeholder="@L["FORM_PHONE_PLACEHOLDER"]"> 
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" name="mgonder" class="btn btn-modern" style="color:black;" onClick="window.location.reload();">@L["BUTTON_SEND_MESSAGE"]</button>
                                               
                                            </div>
                                        </div>
                                    </form>
                                                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
               <section class="clients">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 ">
                        <div class="clients-logo">
                            <a href="https://drive.google.com/drive/folders/1pfpwkH7snq2gtS-wSvaswlW1t5gs64cP?usp=sharing" target="_blank"><img src="../../upload/drv.png" alt=""></a>
                        </div>
                
                    </div>
                </div>
            </div>
        </section> 
