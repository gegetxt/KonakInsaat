@using KonakInsaat.Areas.Admin.Models
@model IEnumerable<Slider>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    Layout = "_Layout";
    ViewData["Title"] = L["Title"];
}

<style>
    .projects .owl-carousel .item .position-re {
        height: 320px;
        overflow: hidden;
        position: relative;
        background: transparent;
    }
    .projects .owl-carousel .item .position-re img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center center;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
    .projects .owl-carousel .item .position-re a {
        display: block;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
    }
</style>

<header class="header slider-fade">
    <div class="owl-carousel owl-theme">
        @if (Model != null && Model.Any())
        {
            @foreach (var slider in Model)
            {
                <div class="text-left item bg-img" data-overlay-dark="3" style="background-image: url('@slider.ResimYolu');">
                    <div class="v-middle caption mt-30">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7">
                                    <h1>@slider.Baslik</h1>
                                    @if (!string.IsNullOrEmpty(slider.AltBaslik))
                                    {
                                        <p>@slider.AltBaslik</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Varsayılan slider görseli yoksa -->
            <div class="text-left item bg-img" data-overlay-dark="3" style="background-image: url('/upload/slider/default.jpg');">
                <div class="v-middle caption mt-30">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7">
                                <h1>KONAK CONSTRUCTION</h1>
                                <p>@L["Welcome_Text"]</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</header>

<!-- Content -->
<div class="content-wrapper">
    <!-- Lines -->
    <section class="content-lines-wrapper">
        <div class="content-lines-inner">
            <div class="content-lines"></div>
        </div>
    </section>

    <!-- About -->
    <section class="about section-padding" style="padding: 90px 0 0 0;">
        <div class="container" style="margin-bottom: 0;">
            <div class="row">
                <div class="col-md-6  animate-box" data-animate-effect="fadeInUp" >
                    <h2 class="section-title"> <span>@L["SECTION_ABOUT_TITLE"]</span></h2>
                    <p>@L["SECTION_ABOUT_TEXT_1"]</p>
                    <p>@L["SECTION_ABOUT_TEXT_2"]</p>
                    <div class="butn-light mt-30 mb-30 ">
                        <a asp-controller="Home" asp-action="About"><span>@L["BUTTON_READ_MORE"]</span></a>
                    </div>
                </div>
                <div class="col-md-6 animate-box" data-animate-effect="fadeInUp">
                    <div class="about-img">
                        <div class="img" style="margin-right: -15px;">
                            <img src="~/upload/thump_1653662938.jpg" class="img-fluid" alt="Konak Construction"> </div>
                        <div class="about-img-2 about-buro">KONAK CONSTRUCTION</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects -->
    <section class="projects section-padding" style="padding: 60px 0 90px 0;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title"><span>@L["SECTION_PROJECTS_TITLE"]</span></h2>
                </div>
            </div>
            <div class="row" style="margin-bottom: -50px;">
                <div class="col-md-12">
                    <div class="owl-carousel owl-theme">
                        @{
                            var projeler = ViewBag.Projeler as IEnumerable<Proje>;
                        }
                        @if (projeler != null && projeler.Any())
                        {
                            @foreach (var proje in projeler)
                            {
                                <div class="item">
                                    <div class="position-re o-hidden">
                                        <a asp-controller="Project" asp-action="Detail" asp-route-id="@proje.ProjeID">
                                            <img src="@Url.Content(!string.IsNullOrEmpty(proje.AnaResimYolu) ? proje.AnaResimYolu : "/Resim/konaklogo.png")" 
                                                 alt="@proje.ProjeAdi">
                                        </a>
                                    </div>
                                    <div class="con">
                                        <h6>
                                            <a asp-controller="Project" asp-action="Detail" asp-route-id="@proje.ProjeID">
                                                @(!string.IsNullOrEmpty(proje.KisaAciklama) ? proje.KisaAciklama : "KONAK CONSTRUCTION")
                                            </a>
                                        </h6>
                                        <h5>
                                            <a asp-controller="Project" asp-action="Detail" asp-route-id="@proje.ProjeID">
                                                @proje.ProjeAdi
                                            </a>
                                        </h5>
                                        <div class="line"></div>
                                        <a asp-controller="Project" asp-action="Detail" asp-route-id="@proje.ProjeID">
                                            <i class="ti-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="testimonials">
        <div class="background bg-img bg-fixed section-padding pb-0" data-background="~/upload/background.jpg" data-overlay-dark="5">
            <div class="container">
                <div class="row">
                    <!-- Promo video -->
                    <div class="col-md-6">
                        <div class="vid-area">
                            <div class="vid-icon">
                                <a class="play-button vid" href="https://www.youtube.com/watch?v=_3kH3iv6zow">
                                    <svg class="circle-fill">
                                        <circle cx="43" cy="43" r="39" stroke="#fff" stroke-width=".5"></circle>
                                    </svg>
                                    <svg class="circle-track">
                                        <circle cx="43" cy="43" r="39" stroke="none" stroke-width="1" fill="none"></circle>
                                    </svg>
                                    <span class="polygon">
                                        <i class="ti-control-play"></i>
                                    </span>
                                </a>
                            </div>
                            <div class="cont mt-15 mb-30">
                                <h5>KONAK CONSTRUCTION</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 offset-md-1">
                        <div class="testimonials-box animate-box" data-animate-effect="fadeInUp">
                            <div class="head-box">
                                <h4>@L["SECTION_CALL_US_TITLE"]</h4>
                                <p>@L["SECTION_CALL_US_TEXT"]</p>
                            </div>
                            <div class="">
                                <div class="item">
                                    <span class="quote"><img src="~/img/quot.png" alt=""></span>
                                    <form asp-controller="Base" asp-action="SubmitContactForm" method="post" class="contact__form">
                                        <div class="row">
                                            <div class="col-md-12 form-group">
                                                <input name="adi" type="text" maxlength="100" placeholder="@L["FORM_NAME_PLACEHOLDER"]" required>
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <input name="mail" type="email" maxlength="100" placeholder="@L["FORM_EMAIL_PLACEHOLDER"]" required>
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <input name="tel" type="text" maxlength="100" placeholder="@L["FORM_PHONE_PLACEHOLDER"]">
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-modern" style="color:black;">@L["BUTTON_SEND_MESSAGE"]</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="clients">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <div class="clients-logo">
                        <a href="https://drive.google.com/drive/folders/1pfpwkH7snq2gtS-wSvaswlW1t5gs64cP?usp=sharing" target="_blank">
                            <img src="~/upload/drv.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>