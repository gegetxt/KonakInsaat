@model IEnumerable<KonakInsaat.Areas.Admin.Models.TeamMember>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer L
@{
    Layout = "_Layout";
    ViewData["Title"] = L["Title"];
}




    <!-- Content -->
    <div class="content-wrapper">
        <!-- Lines -->
        <section class="content-lines-wrapper">
            <div class="content-lines-inner">
                <div class="content-lines"></div>
            </div>
        </section>
        <!-- Header Banner -->
        <section class="banner-header banner-img valign bg-img bg-fixed" data-overlay-darkgray="0" data-background="upload/background.jpg"> </section>
        <!-- About -->
        <section class="about section-padding2">
            <div class="container">
            <div class="row" >
                    <div class="col-md-7 mb-30 animate-box" data-animate-effect="fadeInUp">
                        <h2 class="section-title"><span>@L["TEAM_FOUNDER_TITLE"]</span></h2>
                        <strong><h4>@L["TEAM_FOUNDER_SUBTITLE"]</h4></strong>
                        <p>@L["TEAM_FOUNDER_DESCRIPTION"]</p>
                    </div>
                    <div class="col-md-5 animate-box" data-animate-effect="fadeInUp">
                        <div class="about-img">
                            <div class="img"> <img src="~/upload/ekip/thump_1648177909.jpg" class="img-fluid" alt="Konak Construction"> </div>
                            <div class="about-img-2 about-buro">Kemal Hacıfazlıoğlu</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Team -->
        <section class="team section-padding2">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="section-title"><span>@L["TEAM_SECTION_TITLE"]</span></h2>
                    </div>
                </div>

                <div class="row" style="margin-bottom: -70px;">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var member in Model)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="item">
                                    @if (!string.IsNullOrEmpty(member.FotoYolu))
                                    {
                                        <img src="@member.FotoYolu" alt="@member.AdSoyad">
                                    }
                                    <div class="info">
                                        <h6>@member.AdSoyad</h6>
                                        @if (!string.IsNullOrEmpty(member.Pozisyon))
                                        {
                                            <p>@member.Pozisyon</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-md-12">
                            <p class="text-center">Henüz ekip üyesi eklenmemiş.</p>
                        </div>
                    }
                </div>
            </div>
        </section>
    <section class="testimonials">
        <div class="background bg-img bg-fixed section-padding pb-0" data-background="../upload/background.jpg" data-overlay-dark="5">
            <div class="container">
                <div class="row">
                    <!-- Promo video -->
                    <div class="col-md-6">
                        <div class="vid-area">
                            <div class="vid-icon">
                                <a class="play-button vid" href="https://www.youtube.com/watch?v=_3kH3iv6zow">
                                    <svg class="circle-fill">
                                        <circle cx="43" cy="43" r="39" stroke="#fff" stroke-width=".5"></circle>
                                    </svg>
                                    <svg class="circle-track">
                                        <circle cx="43" cy="43" r="39" stroke="none" stroke-width="1" fill="none"></circle>
                                    </svg> <span class="polygon">
                                        <i class="ti-control-play"></i>
                                    </span>
                                </a>
                            </div>
                            <div class="cont mt-15 mb-30">
                                <h5>KONAK CONSTRUCTION</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 offset-md-1">
                        <div class="testimonials-box animate-box" data-animate-effect="fadeInUp">
                            <div class="head-box">
                                    <h4>@L["SECTION_CALL_US_TITLE"]</h4>
                                    <p>@L["SECTION_CALL_US_TEXT"]</p>
                            </div>
                            <div class="">
                                <div class="item">
                                    <span class="quote"><img src="img/quot.png" alt=""></span>

                                    <form asp-controller="Base" asp-action="SubmitContactForm" method="post" class="contact__form">
                                        <!-- Form elements -->
                                        <div class="row">
                                            <div class="col-md-12 form-group">
                                                    <input name="adi" type="text" maxlength="100" placeholder="@L["FORM_NAME_PLACEHOLDER"]" required>
                                            </div>
                                            <div class="col-md-12 form-group">
                                                    <input name="mail" type="email" maxlength="100" placeholder="@L["FORM_EMAIL_PLACEHOLDER"]" required>
                                            </div>
                                            <div class="col-md-12 form-group">
                                                    <input name="tel" type="text" maxlength="100" placeholder="@L["FORM_PHONE_PLACEHOLDER"]">
                                            </div>
                                            <div class="col-md-12">
                                                    <button type="submit" name="mgonder" class="btn btn-modern" style="color:black;" onClick="window.location.reload();">@L["BUTTON_SEND_MESSAGE"]</button>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="clients">
        <div class="container">
            <div class="row">
                <div class="col-md-2 ">
                    <div class="clients-logo">
                        <a href="https://drive.google.com/drive/folders/1pfpwkH7snq2gtS-wSvaswlW1t5gs64cP?usp=sharing" target="_blank"><img src="upload/drv.png" alt=""></a>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>