@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
@model KonakInsaat.Models.Login


   <div class="content-wrapper">
        <!-- Lines -->
        <section class="content-lines-wrapper">
            <div class="content-lines-inner">
                <div class="content-lines"></div>
            </div>
        </section>
  
        <section class="banner-header banner-img valign bg-img bg-fixed" data-overlay-darkgray="0" data-background="upload/background.jpg"> </section>
       <section class="about section-padding2">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-30 animate-box" data-animate-effect="fadeInUp"> </div>
                    <div class="col-md-4 mb-30 animate-box" data-animate-effect="fadeInUp">
                        <form asp-action="Login" method="post" class="">
                            <br><br><br>
                            <div class="row">
                                <div class="col-lg-12 form-group">
                                    <p class="text-center">Yönetici girişi için şifre giriniz.</p>
                                    <input asp-for="Password" type="password" maxlength="100" placeholder="Şifre..."
                                           style="border:1px solid #f0f0ed; border-radius: 0.325rem; padding-left: 10px;" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                    <button type="submit" name="giris" class="btn btn-modern"
                                            style="color:black; width: 100%;">
                                        LOGIN
                                    </button>
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="text-danger mt-2">@ViewBag.Error</div>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                  
                </div>
            </div>
        </section>
 <section class="testimonials">
            <div class="background bg-img bg-fixed section-padding pb-0" data-background="upload/background.jpg" data-overlay-dark="5">
                <div class="container">
                    <div class="row">
                        <!-- Promo video -->
                        <div class="col-md-6">
                            <div class="vid-area">
                                <div class="vid-icon">
                                    <a class="play-button vid" href="https://www.youtube.com/watch?v=_3kH3iv6zow">
                                        <svg class="circle-fill">
                                            <circle cx="43" cy="43" r="39" stroke="#fff" stroke-width=".5"></circle>
                                        </svg>
                                        <svg class="circle-track">
                                            <circle cx="43" cy="43" r="39" stroke="none" stroke-width="1" fill="none"></circle>
                                        </svg> <span class="polygon">
                                            <i class="ti-control-play"></i>
                                        </span> </a>
                                </div>
                                <div class="cont mt-15 mb-30">
                                    <h5>KONAK CONSTRUCTION</h5>
                                </div>
                            </div>
                        </div>
             
                        <div class="col-md-5 offset-md-1">
                            <div class="testimonials-box animate-box" data-animate-effect="fadeInUp">
                                <div class="head-box">
                                    <h4>LET US CALL YOU!</h4>
                                    <p>Fill in the form to get information and we will call you.</p>
                                </div>
                                <div class="">
                                    <div class="item"> <span class="quote"><img src="img/quot.png" alt=""></span>
                                      
                                        <form asp-controller="Base" asp-action="SubmitContactForm" method="post" class="contact__form">
                                        <!-- Form elements -->
                                        <div class="row">
                                            <div class="col-md-12 form-group">
                                                <input name="adi" type="text" maxlength="100" placeholder="Name Surname *" required> 
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <input name="mail" type="email" maxlength="100" placeholder=" E-Mail  *" required> 
                                            </div>
                                            <div class="col-md-12 form-group">
                                                <input name="tel" type="text" maxlength="100" placeholder="Phone "> 
                                            </div>
                                            <div class="col-md-12">
                                                <button type="submit" name="mgonder" class="btn btn-modern" style="color:black;" onClick="window.location.reload();">SEND MESSAGE</button>
                                               
                                            </div>
                                        </div>
                                    </form>
                                                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



               <section class="clients">
            <div class="container">
                <div class="row">
                    <div class="col-md-2 ">
                        <div class="clients-logo">
                            <a href="https://drive.google.com/drive/folders/1pfpwkH7snq2gtS-wSvaswlW1t5gs64cP?usp=sharing" target="_blank"><img src="upload/drv.png" alt=""></a>
                        </div>
                
                    </div>
                </div>
            </div>
        </section> 
        
    </div>


