@model KonakInsaat.Areas.Admin.Models.Kullanici
@{
    Layout = "_Layout";
}

<form asp-area="Admin" asp-controller="AdminKullanici" asp-action="Edit" asp-route-id="@Model.KullaniciID" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Kullanıcı Ayarları - Güncelle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">@Model.KullaniciAdi</h4>
                </div><!-- end card header -->

                <div class="card-body">
                    <input type="hidden" asp-for="KullaniciID" />
                    <input type="hidden" asp-for="Sifre" />
                    <input type="hidden" asp-for="KayitTarihi" />
                    <input type="hidden" asp-for="SonGirisTarihi" />
                    
                    <div class="live-preview">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="KullaniciAdi">Kullanıcı Adı</label>
                                    <input asp-for="KullaniciAdi" class="form-control" />
                                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Email">E-posta</label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Yeni Şifre</label>
                                    <input name="yeniSifre" class="form-control" type="password" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
                                    <small class="text-muted">Şifreyi değiştirmek istemiyorsanız boş bırakın</small>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="AdSoyad">Ad Soyad</label>
                                    <input asp-for="AdSoyad" class="form-control" />
                                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Telefon">Telefon</label>
                                    <input asp-for="Telefon" class="form-control" />
                                    <span asp-validation-for="Telefon" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Rol">Rol</label>
                                    <select asp-for="Rol" class="form-select">
                                        <option value="Admin">Admin</option>
                                        <option value="Editor">Editor</option>
                                        <option value="User">User</option>
                                    </select>
                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Aktif</label>
                                    <div class="form-check form-switch form-switch-lg">
                                        <input asp-for="Aktif" class="form-check-input" type="checkbox" />
                                        <label class="form-check-label" asp-for="Aktif"></label>
                                    </div>
                                </div>
                            </div><!--end col-->

                            <div class="col-lg-12">
                                <div class="text-end">
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="AdminKullanici" asp-action="Index">Geri Dön</a>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</form>
