@model IEnumerable<KonakInsaat.Areas.Admin.Models.Proje>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Projeler</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Projeler</h5>
                <br>
                <a asp-area="Admin" asp-controller="AdminProje" asp-action="Create" class="btn btn-success btn-label waves-effect waves-light">
                    <i class="ri-add-line label-icon align-middle fs-16 me-2"></i> Yeni Ekle
                </a>
            </div>
            <div class="card-body">
                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">Resim</th>
                            <th data-ordering="true">Proje Adı</th>
                            <th data-ordering="true">Proje Durumu</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var proje in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(proje.AnaResimYolu))
                                        {
                                            <img src="@proje.AnaResimYolu" width="100" height="70" alt="@proje.ProjeAdi" style="object-fit: cover;">
                                        }
                                        else
                                        {
                                            <img src="/Resim/konaklogo.png" width="100" height="70" alt="Resim Yok">
                                        }
                            </td>
                                    <td>@proje.ProjeAdi</td>
                                    <td>
                                        @if (proje.ProjeDurumu == "Tamamlandı")
                                        {
                                            <span style="color: #fff !important;" class="badge bg-info fs-12">Tamamlandı</span>
                                        }
                                        else if (proje.ProjeDurumu == "Devam Ediyor")
                                        {
                                            <span style="color: #fff !important;" class="badge bg-danger fs-12">Devam Ediyor</span>
                                        }
                                        else
                                        {
                                            <span style="color: #fff !important;" class="badge bg-warning fs-12">@proje.ProjeDurumu</span>
                                        }
                            </td>
                            <td>
                                <div class="dropdown d-inline-block">
                                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="ri-more-fill align-middle"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                                    <a asp-area="Admin" asp-controller="AdminProje" asp-action="DetayResimGetir" asp-route-id="@proje.ProjeID" class="dropdown-item">
                                                        <i class="ri-image-fill align-bottom me-2 text-muted"></i> Detay Resimler
                                            </a>
                                        </li>
                                                <li>
                                                    <a asp-area="Admin" asp-controller="AdminProje" asp-action="Edit" asp-route-id="@proje.ProjeID" class="dropdown-item">
                                                        <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Güncelle
                                            </a>
                                        </li>
                                                <li>
                                                    <a asp-area="Admin" asp-controller="AdminProje" asp-action="Delete" asp-route-id="@proje.ProjeID" 
                                                       onclick="return confirm('Silmek İstiyor Musunuz?')" 
                                                       class="dropdown-item remove-item-btn">
                                                <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Sil
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Henüz proje eklenmemiş.</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</div>
</div>
