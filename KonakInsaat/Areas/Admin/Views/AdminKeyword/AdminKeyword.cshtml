@model IEnumerable<KonakInsaat.Areas.Admin.Models.Keyword>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Anahtar Kelime Ayarları</h5>
                <div class="flex-shrink-0">
                    <a class="btn btn-success" asp-area="Admin" asp-controller="AdminKeyword" asp-action="Create">
                        <i class="ri-add-line align-bottom me-1"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="datatables" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th>Sayfa Adı</th>
                            <th>Title (TR)</th>
                            <th>Description (TR)</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SayfaAdi</td>
                                    <td>@item.Title</td>
                                    <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a class="btn btn-sm btn-warning waves-effect waves-light" asp-area="Admin" asp-controller="AdminKeyword" asp-action="Edit" asp-route-id="@item.KeywordID">
                                                <i class="ri-pencil-fill align-bottom me-1"></i> Güncelle
                                            </a>
                                            <a class="btn btn-sm btn-danger waves-effect waves-light" asp-area="Admin" asp-controller="AdminKeyword" asp-action="Delete" asp-route-id="@item.KeywordID" onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                                <i class="ri-delete-bin-fill align-bottom me-1"></i> Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#datatables').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/tr.json"
                }
            });
        });
    </script>
}
