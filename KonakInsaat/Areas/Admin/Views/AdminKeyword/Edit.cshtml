@model KonakInsaat.Areas.Admin.Models.Keyword
@{
    Layout = "_Layout";
}

<form asp-area="Admin" asp-controller="AdminKeyword" asp-action="Edit" asp-route-id="@Model.KeywordID" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Anahtar Kelimeler - Güncelle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">@Model.SayfaAdi</h4>
                </div><!-- end card header -->

                <div class="card-body">
                    <input type="hidden" asp-for="KeywordID" />
                    <div class="live-preview">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="SayfaAdi">Sayfa Adı</label>
                                    <input asp-for="SayfaAdi" class="form-control" />
                                    <span asp-validation-for="SayfaAdi" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Title">Title (TR)</label>
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Title_EN">Title (EN)</label>
                                    <input asp-for="Title_EN" class="form-control" />
                                    <span asp-validation-for="Title_EN" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Title_RU">Title (RU)</label>
                                    <input asp-for="Title_RU" class="form-control" />
                                    <span asp-validation-for="Title_RU" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Description">Description (TR)</label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Description_EN">Description (EN)</label>
                                    <textarea asp-for="Description_EN" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description_EN" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Description_RU">Description (RU)</label>
                                    <textarea asp-for="Description_RU" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description_RU" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Keywords">Keywords (TR)</label>
                                    <textarea asp-for="Keywords" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Keywords" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Keywords_EN">Keywords (EN)</label>
                                    <textarea asp-for="Keywords_EN" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Keywords_EN" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Keywords_RU">Keywords (RU)</label>
                                    <textarea asp-for="Keywords_RU" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Keywords_RU" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-lg-12">
                                <div class="text-end">
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="AdminKeyword" asp-action="Index">Geri Dön</a>
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</form>
