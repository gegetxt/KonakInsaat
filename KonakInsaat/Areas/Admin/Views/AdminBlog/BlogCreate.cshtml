@model KonakInsaat.Areas.Admin.Models.Blog

@{
    Layout = "_Layout";
}

<form asp-action="Create" asp-controller="AdminBlog" asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Blog - Ekle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <div class="flex-shrink-0">
                    </div>
                </div><!-- end card header -->

                <div class="card-body">
                    <div class="live-preview">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Baslik" class="form-label"></label>
                                    <input asp-for="Baslik" class="form-control" />
                                    <span asp-validation-for="Baslik" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Baslik_EN" class="form-label"></label>
                                    <input asp-for="Baslik_EN" class="form-control" />
                                    <span asp-validation-for="Baslik_EN" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Baslik_RU" class="form-label"></label>
                                    <input asp-for="Baslik_RU" class="form-control" />
                                    <span asp-validation-for="Baslik_RU" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="YayinTarihi" class="form-label"></label>
                                    <input asp-for="YayinTarihi" type="date" class="form-control" />
                                    <span asp-validation-for="YayinTarihi" class="text-danger"></span>
                                </div>
                            </div><!--end col-->

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Icerik" class="form-label"></label>
                                    <textarea asp-for="Icerik" class="ckeditor ck-editor"></textarea>
                                    <span asp-validation-for="Icerik" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Icerik_EN" class="form-label"></label>
                                    <textarea asp-for="Icerik_EN" class="ckeditor ck-editor"></textarea>
                                    <span asp-validation-for="Icerik_EN" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Icerik_RU" class="form-label"></label>
                                    <textarea asp-for="Icerik_RU" class="ckeditor ck-editor"></textarea>
                                    <span asp-validation-for="Icerik_RU" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Resim" class="form-label"></label>
                                    <input asp-for="Resim" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="Resim" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="text-end">
                                    <a asp-action="Index" asp-controller="AdminBlog" asp-area="Admin" class="btn btn-danger">Geri Dön</a>
                                    <button type="submit" class="btn btn-secondary waves-effect waves-light">
                                        Ekle <i class="icon-arrow-right14 position-right"></i>
                                    </button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/ckeditor.js"></script>
    <script>
        // CKEditor initialize
        document.querySelectorAll('.ckeditor').forEach(function(element) {
            ClassicEditor.create(element);
        });
    </script>
}