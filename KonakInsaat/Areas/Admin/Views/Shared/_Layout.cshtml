    <style>
        /* Menu link position relative */
        .navbar-menu .navbar-nav .nav-link.menu-link {
            position: relative !important;
        }
        
        /* Ok stilleri - CSS border ile */
        .menu-arrow {
            position: absolute !important;
            right: 20px !important;
            top: 50% !important;
            width: 6px !important;
            height: 6px !important;
            display: block !important;
            border: none !important;
            border-right: 2px solid #abb9e8 !important;
            border-bottom: 2px solid #abb9e8 !important;
            transform: translateY(-50%) rotate(-45deg) !important;
            transition: transform 0.3s ease, border-color 0.3s ease !important;
            background: transparent !important;
        }
        
        .nav-link:hover .menu-arrow {
            border-right-color: #fff !important;
            border-bottom-color: #fff !important;
        }
        
        .nav-link[aria-expanded="true"] .menu-arrow {
            transform: translateY(-50%) rotate(45deg) !important;
            border-right-color: #fff !important;
            border-bottom-color: #fff !important;
        }
        
        /* Sidebar küçükken popup menü stili */
        [data-sidebar-size="sm"] .menu-dropdown {
            background-color: #000f40 !important;
            border: 1px solid #1a2b5e !important;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3) !important;
        }
        
        /* Sidebar küçükken hover efekti */
        [data-sidebar-size="sm"] .navbar-menu .navbar-nav .nav-item:hover > .nav-link {
            background-color: #405189 !important;
        }
        
        /* Sidebar küçükken TÜM okları gizle */
        [data-sidebar-size="sm"] .menu-arrow {
            display: none !important;
        }
    </style>
    
