@model IEnumerable<KonakInsaat.Areas.Admin.Models.Mesaj>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Gelen Kutusu</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width: 150px;">Tarih</th>
                            <th>Ad Soyad</th>
                            <th>E-Posta</th>
                            <th>Telefon</th>
                            <th style="width: 100px;">Durum</th>
                            <th style="width: 150px;">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var mesaj in Model)
                            {
                                <tr class="@(!mesaj.Okundu ? "table-warning" : "")">
                                    <td>@mesaj.GonderimTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <strong>@mesaj.AdSoyad</strong>
                                        @if (!mesaj.Okundu)
                                        {
                                            <span class="badge bg-danger ms-2">Yeni</span>
                                        }
                                    </td>
                                    <td>@mesaj.Email</td>
                                    <td>@mesaj.Telefon</td>
                                    <td>
                                        @if (mesaj.Okundu)
                                        {
                                            <span class="badge bg-success">Okundu</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Okunmadı</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="AdminMesaj" asp-action="Detay" asp-route-id="@mesaj.MesajID" class="btn btn-primary btn-sm">Detay</a>
                                        <a asp-area="Admin" asp-controller="AdminMesaj" asp-action="Delete" asp-route-id="@mesaj.MesajID" class="btn btn-danger btn-sm" onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Henüz mesaj bulunmuyor.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>













