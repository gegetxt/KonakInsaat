@model IEnumerable<KonakInsaat.Areas.Admin.Models.TeamMember>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Ekip Üyeleri</h4>
            <a asp-area="Admin" asp-controller="AdminTeam" asp-action="Create" class="btn btn-success">
                <i class="ri-add-line me-1"></i> Yeni Ekle
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Sıra</th>
                            <th>Ad Soyad</th>
                            <th>Pozisyon</th>
                            <th style="width: 140px;">Durum</th>
                            <th style="width: 160px;">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Sira</td>
                                    <td>@item.AdSoyad</td>
                                    <td>@item.Pozisyon</td>
                                    <td>
                                        @if (item.Aktif)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="AdminTeam" asp-action="Edit" asp-route-id="@item.TeamMemberID" class="btn btn-warning btn-sm">Güncelle</a>
                                        <a asp-area="Admin" asp-controller="AdminTeam" asp-action="Delete" asp-route-id="@item.TeamMemberID" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istiyor musunuz?');">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Henüz ekip üyesi eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>














