@model KonakInsaat.Areas.Admin.Models.TeamMember
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Ekip Üyesi @((Model.TeamMemberID == 0) ? "Ekle" : "Düzenle")</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xxl-8">
        <div class="card">
            <div class="card-body">
                <form asp-area="Admin" asp-controller="AdminTeam" asp-action="@(Model.TeamMemberID == 0 ? "Create" : "Edit")" method="post">
                    @if (Model.TeamMemberID != 0)
                    {
                        <input type="hidden" asp-for="TeamMemberID" />
                    }

                    <div class="mb-3">
                        <label asp-for="AdSoyad" class="form-label"></label>
                        <input asp-for="AdSoyad" class="form-control" />
                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Pozisyon" class="form-label"></label>
                        <input asp-for="Pozisyon" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="FotoYolu" class="form-label"></label>
                        <input asp-for="FotoYolu" class="form-control" />
                        <div class="form-text">Şimdilik doğrudan yol giriyoruz. Örn: <code>/upload/ekip/thump_1648177909.jpg</code></div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Sira" class="form-label"></label>
                            <input asp-for="Sira" class="form-control" type="number" />
                        </div>
                        <div class="col-md-4 mb-3 d-flex align-items-center">
                            <div class="form-check mt-4">
                                <input asp-for="Aktif" class="form-check-input" type="checkbox" />
                                <label asp-for="Aktif" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <a asp-area="Admin" asp-controller="AdminTeam" asp-action="Index" class="btn btn-secondary">Geri</a>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>














