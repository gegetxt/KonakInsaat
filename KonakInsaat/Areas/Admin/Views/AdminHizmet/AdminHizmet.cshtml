@model IEnumerable<KonakInsaat.Areas.Admin.Models.Hizmet>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Hizmetler</h5>
                <br>
                <a asp-area="Admin" asp-controller="AdminHizmet" asp-action="HizmetCreate" class="btn btn-success btn-label waves-effect waves-light">
                    <i class="ri-add-line label-icon align-middle fs-16 me-2"></i> Yeni Ekle
                </a>
            </div>
            <div class="card-body">
                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">Resim</th>
                            <th data-ordering="true">Hizmet Adı</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ResimYolu))
                                        {
                                            <img src="@Url.Content($"~/Resim/{item.ResimYolu}")" width="100" height="70" alt="@item.HizmetAdi" />
                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/Resim/no-image.jpg")" width="100" height="70" alt="Resim yok" />
                                        }
                                    </td>
                                    <td>@item.HizmetAdi</td>
                                    <td>
                                        <div class="d-inline-block">
                                            <a asp-area="Admin"
                                               asp-controller="AdminHizmet"
                                               asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-warning waves-effect waves-light">
                                                Güncelle
                                            </a>
                                            <a asp-area="Admin"
                                               asp-controller="AdminHizmet"
                                               asp-action="Delete"
                                               asp-route-id="@item.Id"
                                               onclick="return confirm('Silmek İstiyor Musunuz?')"
                                               class="btn btn-danger waves-effect waves-light">
                                                Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">Henüz hizmet eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>