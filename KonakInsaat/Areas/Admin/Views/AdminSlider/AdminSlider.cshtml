@model IEnumerable<KonakInsaat.Areas.Admin.Models.Slider>

@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Slider</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <a asp-area="Admin" asp-controller="AdminSlider" asp-action="Create" class="btn btn-success btn-label waves-effect waves-light">
                    <i class="ri-add-line label-icon align-middle fs-16 me-2"></i> Yeni Ekle
                </a>
            </div>
            <div class="card-body">
                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">Resim</th>
                            <th data-ordering="true">Başlık</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var slider in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(slider.ResimYolu))
                                        {
                                            <img src="@slider.ResimYolu" width="100" height="70" alt="@slider.Baslik" class="rounded">
                                        }
                                    </td>
                                    <td>@slider.Baslik</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light" asp-area="Admin" asp-controller="AdminSlider" asp-action="Edit" asp-route-id="@slider.SliderID">Güncelle</a>
                                        <a asp-area="Admin" asp-controller="AdminSlider" asp-action="Delete" asp-route-id="@slider.SliderID" onclick="return confirm('Silmek İstiyor Musunuz?')" class="btn btn-danger waves-effect waves-light">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">Henüz slider eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
