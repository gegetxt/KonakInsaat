@using KonakInsaat.Areas.Admin.Models
@model IEnumerable<Marka>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Reeranslar</h5>
                <br>
                <a asp-area="Admin" asp-controller="AdminMarka" asp-action="Create" class="btn btn-success btn-label waves-effect waves-light"><i class="ri-add-line label-icon align-middle fs-16 me-2"></i> Yeni Ekle</a>
            </div>
            <div class="card-body">
                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">Resim</th>

                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var marka in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(!string.IsNullOrEmpty(marka.ResimYolu) ? marka.ResimYolu : "/img/logo.png")" 
                                             width="100" height="50" 
                                             alt="@marka.MarkaAdi"
                                             style="object-fit: contain;">
                                    </td>
                                    <td>
                                        <div class="dropdown d-inline-block">
                                            <a class="btn btn-warning waves-effect waves-light" 
                                               asp-area="Admin" 
                                               asp-controller="AdminMarka" 
                                               asp-action="Edit" 
                                               asp-route-id="@marka.MarkaID">Güncelle</a>
                                            <a class="btn btn-danger waves-effect waves-light" 
                                               asp-area="Admin" 
                                               asp-controller="AdminMarka" 
                                               asp-action="Delete" 
                                               asp-route-id="@marka.MarkaID" 
                                               onclick="return confirm('Silmek İstiyor Musunuz?')">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center">Henüz marka eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->

</div><!--end row-->

                </div><!-- end col -->
</div>
<!-- container-fluid -->
</div>
<!-- End Page-content -->