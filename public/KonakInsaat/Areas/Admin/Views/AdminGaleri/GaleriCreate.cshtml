@model KonakInsaat.Areas.Admin.Models.Galeri

@{
    Layout = "_Layout";
}

<form asp-action="Create" asp-controller="AdminGaleri" asp-area="Admin" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Galeri - Ekle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <div class="flex-shrink-0">
                    </div>
                </div><!-- end card header -->

                <div class="card-body">
                    <div class="live-preview">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Baslik" class="form-label"></label>
                                <input asp-for="Baslik" class="form-control" />
                                <span asp-validation-for="Baslik" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Baslik_EN" class="form-label"></label>
                                <input asp-for="Baslik_EN" class="form-control" />
                                <span asp-validation-for="Baslik_EN" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Baslik_RU" class="form-label"></label>
                                <input asp-for="Baslik_RU" class="form-control" />
                                <span asp-validation-for="Baslik_RU" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Kategori" class="form-label"></label>
                                <input asp-for="Kategori" class="form-control" />
                                <span asp-validation-for="Kategori" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Sira" class="form-label"></label>
                                <input asp-for="Sira" type="number" class="form-control" />
                                <span asp-validation-for="Sira" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 d-flex align-items-center">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="Aktif" class="form-check-input" type="checkbox" />
                                    <label asp-for="Aktif" class="form-check-label"></label>
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Resim" class="form-label"></label>
                                <input asp-for="Resim" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="Resim" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12 pt-2">
                                <div class="text-end">
                                    <a asp-action="Index" asp-controller="AdminGaleri" asp-area="Admin" class="btn btn-danger">Geri Dön</a>
                                    <button type="submit" class="btn btn-secondary waves-effect waves-light">
                                        Ekle <i class="icon-arrow-right14 position-right"></i>
                                    </button>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div>
                </div>
            </div>
        </div> <!-- end col -->
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

