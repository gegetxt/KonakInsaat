@model IEnumerable<KonakInsaat.Areas.Admin.Models.Iletisim>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">İletişim Bilgileri</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">Ofis</th>
                            <th data-ordering="true">Adres</th>
                            <th data-ordering="true">Telefon</th>
                            <th data-ordering="true">Mail</th>
                            <th style="width: 140px;">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@(item.Baslik ?? "İletişim")</strong></td>
                                    <td>@item.Adres_1</td>
                                    <td>@item.Telefon</td>
                                    <td>@item.Mail</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light"
                                           asp-area="Admin"
                                           asp-controller="AdminIletisim"
                                           asp-action="Edit"
                                           asp-route-id="@item.IletisimID">
                                            Güncelle
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Henüz iletişim kaydı bulunmuyor.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->


