@using KonakInsaat.Areas.Admin.Models
@model IEnumerable<Sosyal>
@{
    Layout = "_Layout";
}

<link rel="stylesheet" preload="" href="/assets/css/plugins/fontawesome.css">

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Sosyal Medya</h5>
                <br>
                <a asp-area="Admin" asp-controller="AdminSosyal" asp-action="Create" class="btn btn-success btn-label waves-effect waves-light">
                    <i class="ri-add-line label-icon align-middle fs-16 me-2"></i> Yeni Ekle
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">İkon</th>
                            <th data-ordering="true">Platform Adı</th>
                            <th data-ordering="true">Link</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var sosyal in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(sosyal.IkonSinifi))
                                        {
                                            <i style="font-size: 25px" class="@sosyal.IkonSinifi"></i>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>@sosyal.PlatformAdi</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(sosyal.Link))
                                        {
                                            <a href="@sosyal.Link" target="_blank">@sosyal.Link</a>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown d-inline-block">
                                            <a class="btn btn-warning waves-effect waves-light" 
                                               asp-area="Admin" 
                                               asp-controller="AdminSosyal" 
                                               asp-action="Edit" 
                                               asp-route-id="@sosyal.SosyalID">Güncelle</a>
                                            <a class="btn btn-danger waves-effect waves-light" 
                                               asp-area="Admin" 
                                               asp-controller="AdminSosyal" 
                                               asp-action="Delete" 
                                               asp-route-id="@sosyal.SosyalID" 
                                               onclick="return confirm('Silmek İstiyor Musunuz?')">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Henüz sosyal medya hesabı eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
