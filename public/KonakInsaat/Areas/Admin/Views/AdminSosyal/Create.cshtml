@using KonakInsaat.Areas.Admin.Models
@model Sosyal
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Sosyal Medya - Yeni Ekle</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <div class="flex-shrink-0">
                </div>
            </div>
            <div class="card-body">
                <form asp-area="Admin" asp-controller="AdminSosyal" asp-action="Create" method="post">
                    <div class="live-preview">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="PlatformAdi">Platform Adı</label>
                                    <input class="form-control" asp-for="PlatformAdi" placeholder="Instagram" />
                                    <span asp-validation-for="PlatformAdi" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="IkonSinifi">İcon Sınıfı</label>
                                    <input class="form-control" asp-for="IkonSinifi" placeholder="fa-brands fa-instagram" />
                                    <span asp-validation-for="IkonSinifi" class="text-danger"></span>
                                    <small class="form-text text-muted">Font Awesome icon sınıfı (örn: fa-brands fa-instagram, fa-brands fa-facebook)</small>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Link">Link</label>
                                    <input class="form-control" asp-for="Link" placeholder="https://www.instagram.com/konakinsaat" />
                                    <span asp-validation-for="Link" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label" asp-for="Sira">Sıra</label>
                                    <input class="form-control" asp-for="Sira" type="number" value="0" />
                                    <span asp-validation-for="Sira" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="Aktif" checked />
                                        <label class="form-check-label" asp-for="Aktif">Aktif</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="text-end">
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="AdminSosyal" asp-action="Index">Geri Dön</a>
                                    <button type="submit" class="btn btn-success waves-effect waves-light">
                                        Kaydet <i class="icon-arrow-right14 position-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>








