@model KonakInsaat.Areas.Admin.Models.Hizmet

@{
    Layout = "_Layout";
}

<form asp-action="Edit"
      asp-controller="AdminHizmet"
      asp-area="Admin"
      method="post"
      enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Hizmet - Güncelle</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <div class="flex-shrink-0">
                    </div>
                </div>

                <div class="card-body">
                    <div class="live-preview">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Baslik" class="form-label"></label>
                                    <input asp-for="Baslik" class="form-control" />
                                    <span asp-validation-for="Baslik" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Baslik_EN" class="form-label"></label>
                                    <input asp-for="Baslik_EN" class="form-control" />
                                    <span asp-validation-for="Baslik_EN" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Baslik_RU" class="form-label"></label>
                                    <input asp-for="Baslik_RU" class="form-control" />
                                    <span asp-validation-for="Baslik_RU" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Aciklama" class="form-label"></label>
                                    <textarea asp-for="Aciklama" class="ckeditor ck-editor"></textarea>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Aciklama_EN" class="form-label"></label>
                                    <textarea asp-for="Aciklama_EN" class="ckeditor ck-editor"></textarea>
                                    <span asp-validation-for="Aciklama_EN" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Aciklama_RU" class="form-label"></label>
                                    <textarea asp-for="Aciklama_RU" class="ckeditor ck-editor"></textarea>
                                    <span asp-validation-for="Aciklama_RU" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="KisaAciklama" class="form-label"></label>
                                    <input asp-for="KisaAciklama" class="form-control" />
                                    <span asp-validation-for="KisaAciklama" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="KisaAciklama_EN" class="form-label"></label>
                                    <input asp-for="KisaAciklama_EN" class="form-control" />
                                    <span asp-validation-for="KisaAciklama_EN" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="KisaAciklama_RU" class="form-label"></label>
                                    <input asp-for="KisaAciklama_RU" class="form-control" />
                                    <span asp-validation-for="KisaAciklama_RU" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label d-block">Mevcut Görsel</label>
                                    @if (!string.IsNullOrEmpty(Model.ResimYolu))
                                    {
                                        <img src="~/Resim/@Model.ResimYolu" alt="Mevcut Görsel" class="img-thumbnail mb-2" style="max-width: 200px;" />
                                    }
                                    else
                                    {
                                        <p class="text-muted">Kayıtlı görsel bulunmuyor.</p>
                                    }
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Resim" class="form-label"></label>
                                    <input asp-for="Resim" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="Resim" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="text-end">
                                    <a asp-action="Index" asp-controller="AdminHizmet" asp-area="Admin" class="btn btn-danger">Geri Dön</a>
                                    <button type="submit" class="btn btn-secondary waves-effect waves-light">
                                        Güncelle <i class="icon-arrow-right14 position-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelectorAll('.ckeditor').forEach(function (element) {
            ClassicEditor.create(element);
        });
    </script>
}

