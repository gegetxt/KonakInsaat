@model IEnumerable<KonakInsaat.Areas.Admin.Models.Sayi>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Sayılar</h5>
                <br>

            </div>
            <div class="card-body">
                <table class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th data-ordering="true">İkon</th>
                            <th data-ordering="false">Başlık</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var sayi in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(sayi.Ikon))
                                        {
                                            <img src="@sayi.Ikon" width="70" height="70" alt="@sayi.Baslik">
                                        }
                                    </td>
                                    <td>@sayi.SayiDegeri</td>
                                    <td>
                                        <div class="dropdown d-inline-block">
                                            <a class="btn btn-warning waves-effect waves-light" asp-area="Admin" asp-controller="AdminSayi" asp-action="Edit" asp-route-id="@sayi.SayiID">Güncelle</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">Henüz sayı eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->

</div><!--end row-->
</div><!-- end col -->
</div>
<!-- container-fluid -->
</div>
<!-- End Page-content -->
